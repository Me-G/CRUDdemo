<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
 PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.mydemo.demo.dao.WebsiteMapper">
    <select id="getWebsiteById" resultType="com.mydemo.demo.bean.Website">
        select * from weiyidata where id=#{id}
    </select>
    <select id="getAllWebsites" resultType="com.mydemo.demo.bean.Website">
        select * from weiyidata
    </select>
    <insert id="insetWebsite">
        insert into weiyidata(name,value,remark) values(#{name},#{value},#{remark})
    </insert>
    <update id="updateWebsite">
        update weiyidata
        <set>
            <if test="name!=null">
                name=#{name},
            </if>
            <if test="value!=null">
                value=#{value},
            </if>
            <if test="remark!=null">
                remark=#{remark}
            </if>
        </set>
        where id=#{id}
    </update>
    <delete id="deleteWebsiteById">
        delete from weiyidata where id=#{id}
    </delete>
    
    <update id="dropColumnID">
        alter table weiyidata drop id
    </update>
    <update id="addColumnID">
        alter table weiyidata add id int unsigned not null auto_increment first,add primary key (id)
    </update>
    
</mapper>
